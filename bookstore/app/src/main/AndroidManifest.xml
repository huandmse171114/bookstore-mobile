<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bookstore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookstore"
        tools:targetApi="31">

        <!-- Set AuthActivity as the main launcher activity -->
        <activity
            android:exported="true"
            android:name="com.bookstore.view.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Remove or comment out individual SignInActivity and SignUpActivity -->
        <!-- <activity android:name=".view.SignInActivity" />
        <activity android:name=".view.SignUpActivity" /> -->

        <activity android:name="com.bookstore.MainActivity" />
    </application>
</manifest>